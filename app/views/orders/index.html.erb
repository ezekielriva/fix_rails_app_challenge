<p id="notice"><%= notice %></p>

<h1>Orders</h1>

<%= render 'filter', products: @products %>

<table>
  <thead>
    <tr>
      <th>Status</th>
      <th>Customer Name</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr id="order_<%= order.id %>">
        <td id="order_<%= order.id %>_status"><%= order.status %></td>
        <td id="order_<%= order.id %>_customer_name"><%= order.customer_name %></td>
        <td id="order_<%= order.id %>_product_name"><%= order.product.name %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path %>
